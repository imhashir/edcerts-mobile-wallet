<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhiteActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryWhiteTheme</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LightButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/light_back_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/colorWhiteActionBar</item>
    </style>

    <style name="EditTextLight" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextLight" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LightAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWhiteTheme</item>
        <item name="colorPrimaryDark">@color/colorWhiteThemeDark</item>
        <item name="colorAccent">@color/colorAccentWhiteTheme</item>

        <item name="actionBarStyle">@style/WhiteActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_white_home_up</item>
    </style>

    <style name="WhiteActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorWhiteActionBar</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorWhiteActionBar</item>
        <item name="titleTextStyle">@style/WhiteActionBarTextStyle</item>
    </style>

    <style name="WhiteActionBarTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhiteActionBarText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorWhiteActionBar</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteActionBar</item>
        <item name="android:editTextColor">@color/colorTextBack</item>
    </style>

    <style name="editTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/light_back_button</item>
        <item name="android:textColorHint">@color/colorWhiteActionBar</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteActionBar</item>
        <item name="android:editTextColor">@color/colorTextBack</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorWhiteActionBar</item>
        <item name="colorControlHighlight">@color/colorWhiteActionBar</item>
    </style>


    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/colorWhiteActionBar</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
